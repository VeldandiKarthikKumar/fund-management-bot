# Copy this file to .env and fill in values
# Never commit .env to git

# ── Database ───────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://fundbot:fundbot_local@localhost:5432/fundbot

# ── Broker selector ────────────────────────────────────────────────────────
# Set to "angel_one" (default) or "zerodha"
BROKER=angel_one

# ── Angel One SmartAPI ──────────────────────────────────────────────────────
# Get API key from: https://smartapi.angelbroking.com/
ANGEL_ONE_API_KEY=your_api_key
ANGEL_ONE_CLIENT_ID=your_client_id        # Your Angel One login ID (e.g. A12345)
ANGEL_ONE_PASSWORD=your_login_pin         # Your Angel One login PIN (4-6 digits)
ANGEL_ONE_TOTP_SECRET=your_totp_secret    # Base32 secret shown when enabling 2FA
ANGEL_ONE_JWT_TOKEN=                      # Populated automatically after daily auth

# ── Zerodha (optional — set BROKER=zerodha to activate) ────────────────────
ZERODHA_API_KEY=your_api_key
ZERODHA_API_SECRET=your_api_secret
ZERODHA_REDIRECT_URL=https://your-domain.com/zerodha/callback
ZERODHA_ACCESS_TOKEN=  # Populated automatically after daily OAuth

# ── Slack ──────────────────────────────────────────────────────────────────
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_TRADING_CHANNEL=#trading-signals

# ── AWS ────────────────────────────────────────────────────────────────────
AWS_REGION=ap-south-1
# Local development only — CI/CD uses OIDC (no static keys needed in GitHub Actions)
AWS_ACCESS_KEY_ID=your-key-id
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=fundbot-tokens

# ── Fund settings ──────────────────────────────────────────────────────────
FUND_SIZE_INR=500000
MAX_RISK_PER_TRADE_PCT=1.5
MAX_OPEN_POSITIONS=5
MIN_RISK_REWARD=2.0
